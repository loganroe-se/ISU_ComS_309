<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/message"
    android:padding="5dp">

    <TextView
        android:id="@+id/start1Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time\nBefore Break"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/start1Btn"/>

    <Button
        android:id="@+id/start1Btn"
        android:layout_width="wrap_content"
        android:text="Set Start Time"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/start1Title"
        app:layout_constraintTop_toBottomOf="@id/start1Title"/>

    <View
        android:id="@+id/divider"
        android:layout_width="150dp"
        android:layout_height="5dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="@id/start1Title"
        app:layout_constraintTop_toBottomOf="@id/start1Btn"
        app:layout_constraintEnd_toEndOf="@id/start1Title"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <TextView
        android:id="@+id/time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/title"
        app:layout_constraintTop_toTopOf="@id/title" />

</androidx.constraintlayout.widget.ConstraintLayout>