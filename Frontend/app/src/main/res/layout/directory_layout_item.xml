<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/directoryProfilePic"
                android:layout_width="62dp"
                android:layout_height="62dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/jobLevelView"/>

            <TextView
                android:id="@+id/fullNameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:text="Name: "
                app:layout_constraintStart_toEndOf="@id/directoryProfilePic"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/emailView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                tools:text="Email: "
                app:layout_constraintStart_toEndOf="@id/directoryProfilePic"
                app:layout_constraintTop_toBottomOf="@id/fullNameView"/>

            <TextView
                android:id="@+id/numberView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                tools:text="Number: "
                app:layout_constraintStart_toEndOf="@id/directoryProfilePic"
                app:layout_constraintTop_toBottomOf="@id/emailView"/>

            <TextView
                android:id="@+id/buildingView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                tools:text="Building: "
                app:layout_constraintStart_toEndOf="@id/directoryProfilePic"
                app:layout_constraintTop_toBottomOf="@id/numberView"/>

            <TextView
                android:id="@+id/jobLevelView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                tools:text="Job Level: "
                app:layout_constraintStart_toEndOf="@id/directoryProfilePic"
                app:layout_constraintTop_toBottomOf="@id/buildingView"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>